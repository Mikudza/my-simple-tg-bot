# replace this file to /lib/systemd/system/
[Unit]
Description=Telegram bot
After=multi-user.target
Wants=multi-user.target

StartLimitIntervalSec=500   #Simple way to autorestart
StartLimitBurst=5           #Simple way to autorestart

[Service]
Restart=on-failure  #Simple way to autorestart
RestartSec=5s       #Simple way to autorestart

ExecStart=/usr/bin/python3 /home/root/my-simple-tg-bot/main.py #Write path to your python script

[Install]
WantedBy=multi-user.target